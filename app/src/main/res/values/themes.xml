<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Discovery" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Surface brand color. -->
        <item name="colorSurface">@color/gray</item>
        <item name="colorOnSurface">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="M">false</item>
        <!-- Navigation Bar Color. -->
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="O_MR1">false</item>
        <!-- Custom Theme. -->
        <item name="android:background">@color/black</item>
    </style>

    <style name="Theme.Discovery.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Discovery.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Discovery.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>